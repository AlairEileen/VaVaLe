<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_content_middle"
    android:layout_marginRight="@dimen/margin_content_middle"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_msg_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_control"
        android:layout_marginTop="@dimen/margin_control"
        android:text="4893748932748"
        android:textColor="@color/theme_font_gray"
        android:textSize="@dimen/textSize_content_middle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_container"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_control"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"

        android:paddingTop="@dimen/margin_control">

        <TextView
            android:id="@+id/tv_msg_detail_receive_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_font"
            android:textSize="@dimen/textSize_content_middle2" />

        <TextView
            android:id="@+id/tv_msg_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/theme_font"
            android:textSize="@dimen/textSize_content_middle2" />

        <TextView
            android:id="@+id/tv_msg_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/theme_font"
            android:textSize="@dimen/textSize_content_middle2" />

    </LinearLayout>

</LinearLayout>