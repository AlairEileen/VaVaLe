<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_control"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/margin_content_middle"
    android:paddingRight="@dimen/margin_content_middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_container"
        android:orientation="vertical"
        android:paddingBottom="23dp"
        android:paddingLeft="13dp"
        android:paddingRight="23dp"
        android:paddingTop="@dimen/margin_control">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="匹配词： "
                android:textColor="@color/theme_font"
                android:textSize="@dimen/textSize_content_middle2" />

            <TextView
                android:id="@+id/tv_project_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_font"
                android:textSize="@dimen/textSize_content_middle2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">


                <TextView
                    android:id="@+id/tv_project_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.15"
                    android:textColor="@color/text_yellow"
                    android:textSize="@dimen/textSize_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/条"
                    android:textColor="@color/text_yellow"
                    android:textSize="@dimen/textSize_content" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_project_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_control"
            android:text="fdsjfljfldjflkdsjlfjdskljfkldsjfkldjkjdlskjflkdsfj"
            android:textColor="@color/theme_font"
            android:textSize="@dimen/textSize_content_middle" />
    </LinearLayout>
</LinearLayout>